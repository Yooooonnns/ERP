# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=digitalisation_erp
DATABASE_USER=erpuser
DATABASE_PASSWORD=ErpPassword123!

# TimescaleDB for IoT Sensors
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DATABASE=sensor_data
TIMESCALE_USER=iotuser
TIMESCALE_PASSWORD=IotPassword123!

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379

# MQTT Broker
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_WEBSOCKET_PORT=9001

# Application Settings
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ASPNETCORE_ENVIRONMENT=Development
DEFAULT_CLIENT=001
COMPANY_NAME=Manufacturing Plant 001

# Optional database seeding (safe: do NOT commit real passwords)
# When ERP_SEED_ADMIN=true, API startup will create an admin account if missing.
ERP_SEED_ADMIN=false
ERP_ADMIN_USERNAME=admin
ERP_ADMIN_EMAIL=admin@erp.local
ERP_ADMIN_PASSWORD=

# Optional: create a standard S_USER account if missing.
ERP_SEED_SUSER_EMAIL=
ERP_SEED_SUSER_PASSWORD=

# Robot Controller API
ROBOT_API_ENDPOINT=http://localhost:8080/api
ROBOT_AUTH_TOKEN=robot-auth-token-here

# Sensor Data Pipeline
SENSOR_BATCH_SIZE=100
SENSOR_FLUSH_INTERVAL_MS=5000
