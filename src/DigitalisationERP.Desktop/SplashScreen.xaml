<Window x:Class="DigitalisationERP.Desktop.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ERP - Initialisation"
        Width="700" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Window.Resources>
        <Storyboard x:Key="GearSpinStoryboard">
            <DoubleAnimation Storyboard.TargetName="GearRotation"
                             Storyboard.TargetProperty="Angle"
                             From="0" To="360" Duration="0:0:3" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource GearSpinStoryboard}"/>
        </EventTrigger>
    </Window.Triggers>
    <Border CornerRadius="20" Background="White" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Opacity="0.15" Color="#000000" ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#F8FAFC" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Animated Gear Icon -->
                <Viewbox Width="100" Height="100" Margin="0,0,0,30">
                    <Path Fill="#0066CC" Data="M19.43 12.98c.04-.32.07-.64.07-.98s-.03-.66-.07-.98l2.11-1.65c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.3-.61-.22l-2.49 1c-.52-.4-1.08-.73-1.69-.98l-.38-2.65C14.46 2.18 14.25 2 14 2h-4c-.25 0-.46.18-.49.42l-.38 2.65c-.61.25-1.17.59-1.69.98l-2.49-1c-.23-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64l2.11 1.65c-.04.32-.07.65-.07.98s.03.66.07.98l-2.11 1.65c-.19.15-.24.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1c.52.4 1.08.73 1.69.98l.38 2.65c.03.24.24.42.49.42h4c.25 0 .46-.18.49-.42l.38-2.65c.61-.25 1.17-.59 1.69-.98l2.49 1c.23.09.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.65zM12 15.5c-1.93 0-3.5-1.57-3.5-3.5s1.57-3.5 3.5-3.5 3.5 1.57 3.5 3.5-1.57 3.5-3.5 3.5z">
                        <Path.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.2" Color="#0066CC" ShadowDepth="0"/>
                        </Path.Effect>
                        <Path.RenderTransform>
                            <RotateTransform x:Name="GearRotation" CenterX="12" CenterY="12"/>
                        </Path.RenderTransform>
                    </Path>
                </Viewbox>

                <TextBlock Text="ERP" FontSize="48" FontWeight="Bold" Foreground="#1A1A1A" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Chargement en cours..." FontSize="16" Foreground="#666666" HorizontalAlignment="Center" Margin="0,0,0,20"/>        

                <Border CornerRadius="3" ClipToBounds="True" Width="300" Height="6">
                    <ProgressBar Width="300" Height="6" IsIndeterminate="True" Background="#E0E0E0" Foreground="#0066CC" BorderThickness="0"/>      
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>
