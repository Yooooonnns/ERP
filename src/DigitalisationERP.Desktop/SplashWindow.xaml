<Window x:Class="DigitalisationERP.Desktop.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ERP - Initialisation"
        Width="700" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ERP" FontSize="48" FontWeight="Bold" Foreground="#1A1A1A" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Loading..." FontSize="16" Foreground="#666666" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <ProgressBar Width="300" Height="6" IsIndeterminate="True" Background="#E0E0E0" Foreground="#0066CC" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>

