<Window x:Class="DigitalisationERP.Desktop.Views.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Admin Dashboard - Digitalisation ERP" 
        Height="750" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Mode="PrimaryMid" 
                                  Padding="16"
                                  materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Security" 
                                           Width="32" 
                                           Height="32" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                    <TextBlock Text="Admin Dashboard" 
                              FontSize="24" 
                              FontWeight="Bold"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Content="LOGOUT"
                       HorizontalAlignment="Right"
                       Style="{StaticResource MaterialDesignFlatButton}"
                       Foreground="White"
                       Click="LogoutButton_Click"/>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <materialDesign:Card Grid.Row="1" 
                            Margin="20"
                            Padding="30"
                            materialDesign:ElevationAssist.Elevation="Dp2">
            
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- Title -->
                    <TextBlock Text="Create New User Account" 
                              FontSize="22" 
                              FontWeight="Bold"
                              Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Fill in the details below to create a new user account. An email with login credentials will be sent automatically." 
                              FontSize="14" 
                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                              TextWrapping="Wrap"
                              Margin="0,0,0,30"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0">
                            
                            <!-- Username -->
                            <TextBox materialDesign:HintAssist.Hint="Username *"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,20"
                                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Email -->
                            <TextBox materialDesign:HintAssist.Hint="Email *"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,20"
                                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Password -->
                            <TextBox materialDesign:HintAssist.Hint="Password *"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,20"
                                    Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Full Name -->
                            <TextBox materialDesign:HintAssist.Hint="Full Name"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,20"
                                    Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="2">
                            
                            <!-- Phone Number -->
                            <TextBox materialDesign:HintAssist.Hint="Phone Number"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,20"
                                    Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Department -->
                            <TextBox materialDesign:HintAssist.Hint="Department"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,20"
                                    Text="{Binding Department, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Roles -->
                            <TextBlock Text="User Roles *" 
                                      FontSize="14"
                                      Margin="0,0,0,10"
                                      Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            
                            <ItemsControl ItemsSource="{Binding AvailableRoles}"
                                         Margin="0,0,0,20">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                 Content="{Binding DisplayName}"
                                                 Margin="0,5,0,5"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Send Credentials Checkbox -->
                            <CheckBox IsChecked="{Binding SendCredentials}"
                                     Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Email" 
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,5,0"/>
                                    <TextBlock Text="Send credentials via email" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </CheckBox>

                        </StackPanel>
                    </Grid>

                    <!-- Message -->
                    <materialDesign:Card Padding="15" 
                                        Margin="0,10,0,20"
                                        Background="{Binding IsSuccess, Converter={StaticResource SuccessBackgroundConverter}}"
                                        Visibility="{Binding Message, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="{Binding IsSuccess, Converter={StaticResource SuccessIconConverter}}" 
                                                   Width="24"
                                                   Height="24"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"
                                                   Foreground="{Binding IsSuccess, Converter={StaticResource SuccessForegroundConverter}}"/>
                            <TextBlock Text="{Binding Message}"
                                      TextWrapping="Wrap"
                                      VerticalAlignment="Center"
                                      Foreground="{Binding IsSuccess, Converter={StaticResource SuccessForegroundConverter}}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Create Button -->
                    <Button Command="{Binding CreateUserCommand}"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Height="50"
                           Margin="0,10,0,10"
                           Content="CREATE USER ACCOUNT"
                           IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                <Binding Path="Username"/>
                                <Binding Path="Email"/>
                            </MultiBinding>
                        </Button.CommandParameter>
                    </Button>

                    <!-- Loading -->
                    <ProgressBar IsIndeterminate="True"
                                Height="4"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                </StackPanel>
            </ScrollViewer>
            
        </materialDesign:Card>
    </Grid>
</Window>
