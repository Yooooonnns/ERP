<UserControl x:Class="DigitalisationERP.Desktop.Views.ConfigurationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3">
            <StackPanel Orientation="Horizontal" Margin="20" VerticalAlignment="Center">
                <TextBlock Text="âš™ï¸ Production Line Configuration" FontSize="18" FontWeight="Bold"
                           Foreground="White" VerticalAlignment="Center"/>
                <Button x:Name="LogoutButton" Content="Logout" Click="LogoutButton_Click"
                        Foreground="White" Background="Transparent" Padding="10,5"
                        HorizontalAlignment="Right" Margin="0,0,0,0" Grid.Column="1"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel Width="800">
                <!-- Section 1: Ligne -->
                <Border Background="White" Padding="20" Margin="0,0,0,20" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Production Line" FontSize="16" FontWeight="Bold"
                                   Foreground="#2196F3" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Line Name *" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="LineNameInput" Padding="12" FontSize="12" Margin="0,0,0,15"
                                 Background="#F5F5F5" BorderThickness="1" BorderBrush="#DDD"/>

                        <TextBlock Text="Description" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="DescriptionInput" Padding="12" FontSize="12" Height="60"
                                 Margin="0,0,0,20" Background="#F5F5F5" BorderThickness="1" BorderBrush="#DDD"
                                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <!-- Section 2: Seuils OEE -->
                <Border Background="White" Padding="20" Margin="0,0,0,20" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š OEE Thresholds" FontSize="16" FontWeight="Bold"
                                   Foreground="#FF9800" Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <StackPanel Width="250">
                                <TextBlock Text="Min Availability (%)" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Slider x:Name="MinAvailabilitySlider" Minimum="50" Maximum="100" Value="85"
                                        Margin="0,0,0,10"/>
                                <TextBlock x:Name="MinAvailabilityValue" Text="85%" FontSize="12" Foreground="#FF9800"/>
                            </StackPanel>
                            <StackPanel Width="250" Margin="50,0,0,0">
                                <TextBlock Text="Min Performance (%)" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Slider x:Name="MinPerformanceSlider" Minimum="50" Maximum="100" Value="90"
                                        Margin="0,0,0,10"/>
                                <TextBlock x:Name="MinPerformanceValue" Text="90%" FontSize="12" Foreground="#FF9800"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Width="250">
                            <TextBlock Text="Min Quality (%)" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Slider x:Name="MinQualitySlider" Minimum="50" Maximum="100" Value="98"
                                    Margin="0,0,0,10"/>
                            <TextBlock x:Name="MinQualityValue" Text="98%" FontSize="12" Foreground="#FF9800"/>
                        </StackPanel>

                        <Border Background="#FFF3E0" Padding="15" Margin="0,20,0,0" CornerRadius="4">
                            <TextBlock x:Name="MinOEEDisplay" Text="Min OEE: 79.21%" FontSize="12"
                                       Foreground="#E65100" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Section 3: Postes -->
                <Border Background="White" Padding="20" Margin="0,0,0,20" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="ðŸ—ï¸ Production Posts" FontSize="16" FontWeight="Bold"
                                   Foreground="#4CAF50" Margin="0,0,0,15"/>

                        <!-- Add Post Form -->
                        <Border Background="#F5F5F5" Padding="15" Margin="0,0,0,15" CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="Add New Post" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Code (e.g., POST-01)" FontSize="11" Margin="0,0,0,3"/>
                                        <TextBox x:Name="PostCodeInput" Padding="10" FontSize="11" Background="White"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,10,0">
                                        <TextBlock Text="Name (e.g., Cutting)" FontSize="11" Margin="0,0,0,3"/>
                                        <TextBox x:Name="PostNameInput" Padding="10" FontSize="11" Background="White"/>
                                    </StackPanel>

                                    <Button x:Name="AddPostButton" Grid.Column="2" Content="Add Post"
                                            Click="AddPostButton_Click" Background="#4CAF50" Foreground="White"
                                            FontWeight="Bold" Padding="5" Cursor="Hand" Margin="10,20,0,0"/>
                                </Grid>

                                <TextBlock x:Name="PostErrorMessage" Text="" FontSize="11" Foreground="#D32F2F"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Posts List -->
                        <DataGrid x:Name="PostsGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                                  Height="200" Background="White" Margin="0,0,0,15">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Code" Binding="{Binding PostCode}" Width="80"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding PostName}" Width="150"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding PostType}" Width="100"/>
                                <DataGridTextColumn Header="Cadence" Binding="{Binding TargetCadence}" Width="80"/>
                                <DataGridTextColumn Header="Capacity" Binding="{Binding MaxCapacity}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Right">
                    <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click"
                            Padding="15,10" FontSize="12" Background="#E0E0E0" Foreground="#333"
                            FontWeight="Bold" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button x:Name="SaveButton" Content="Save Configuration" Click="SaveButton_Click"
                            Padding="15,10" FontSize="12" Background="#2196F3" Foreground="White"
                            FontWeight="Bold" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
