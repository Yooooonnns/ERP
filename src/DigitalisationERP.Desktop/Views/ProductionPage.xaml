<UserControl x:Class="DigitalisationERP.Desktop.Views.ProductionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with View Toggle -->
        <Border Grid.Row="0" 
                Background="#2196F3"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Factory" 
                                           Width="32" 
                                           Height="32"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Production Management" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="White"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Line:" FontSize="11" Foreground="White" Opacity="0.9" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox x:Name="ProductionLineSelector" 
                                     SelectionChanged="ProductionLineSelector_SelectionChanged"
                                     Width="200"
                                     Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                     Foreground="White"
                                     BorderBrush="White"
                                     materialDesign:TextFieldAssist.UnderlineBrush="White">
                                <ComboBoxItem Content="ðŸŒ All Lines - Global View" Tag="GLOBAL"/>
                            </ComboBox>

                            <Button x:Name="EditLineLinksButton"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="White"
                                    Foreground="#2196F3"
                                    Padding="10,6"
                                    Margin="10,0,0,0"
                                    Click="EditLineLinks_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="LinkVariant" Width="16" Height="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Line Links" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ResetFinishedProductsButton"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="White"
                                    Foreground="#2196F3"
                                    Padding="10,6"
                                    Margin="10,0,0,0"
                                    Click="ResetFinishedProducts_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Restore" Width="16" Height="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Reset PF" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="AddLineButton"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="White"
                                    Foreground="#2196F3"
                                    Padding="10,6"
                                    Margin="10,0,0,0"
                                    Click="AddLine_Click"
                                    Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Add Line" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- View Toggle Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="ZoomIn_Click" Margin="0,0,8,0" ToolTip="Zoom In" Background="White" Foreground="#2196F3">
                        <materialDesign:PackIcon Kind="MagnifyPlus" Width="20" Height="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="ZoomOut_Click" Margin="0,0,8,0" ToolTip="Zoom Out" Background="White" Foreground="#2196F3">
                        <materialDesign:PackIcon Kind="MagnifyMinus" Width="20" Height="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="ResetZoom_Click" Margin="0,0,12,0" ToolTip="Reset Zoom" Background="White" Foreground="#2196F3">
                        <materialDesign:PackIcon Kind="FitToPage" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="FlowViewButton"
                            Width="140"
                            Height="40"
                            Margin="0,0,10,0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="White"
                            Foreground="#2196F3"
                            Click="FlowViewButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FlowChart" Width="20" Height="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Flow Map" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="KanbanViewButton"
                            Width="140"
                            Height="40"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="White"
                            BorderBrush="White"
                            Click="KanbanViewButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewColumn" Width="20" Height="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Kanban Board" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- Production Flow Visualization -->
            <Grid x:Name="FlowViewPanel" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Sidebar - Posts Control Panel -->
                <Border Grid.Column="0"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Statistics -->
                        <Border Grid.Row="0" 
                                Background="#2196F3"
                                Padding="15"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,0,0,1">
                            <StackPanel>
                                <TextBlock Text="STATISTICS" 
                                          FontSize="10"
                                          FontWeight="Bold"
                                          Foreground="White"
                                          Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Active Posts" 
                                                  FontSize="10"
                                                  Foreground="White"
                                                  Opacity="0.9"/>
                                        <TextBlock x:Name="ActivePostsCount"
                                                  Text="0" 
                                                  FontSize="24"
                                                  FontWeight="Bold"
                                                  Foreground="White"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Total Load" 
                                                  FontSize="10"
                                                  Foreground="White"
                                                  Opacity="0.9"/>
                                        <TextBlock x:Name="TotalLoadText"
                                                  Text="0%" 
                                                  FontSize="24"
                                                  FontWeight="Bold"
                                                  Foreground="White"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Margin="0,10,0,0">
                                    <TextBlock Text="Finished Products" 
                                              FontSize="10"
                                              Foreground="White"
                                              Opacity="0.9"/>
                                    <TextBlock x:Name="FinishedProductsText"
                                              Text="0"
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- OF Simulation (internal testing) - use Kanban + Add Task to create/launch OFs -->
                        <Border Grid.Row="1" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="OF SIMULATION" FontSize="10" FontWeight="Bold" Foreground="#666" Margin="0,0,0,10"/>

                                <TextBox x:Name="OrderNumberTextBox"
                                         materialDesign:HintAssist.Hint="OF Number (ex: OF-2026-001)"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Margin="0,0,0,10"/>

                                <TextBox x:Name="QuantityTextBox"
                                         materialDesign:HintAssist.Hint="Quantity"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         PreviewTextInput="NumberValidation_PreviewTextInput"
                                         Margin="0,0,0,10"/>

                                <TextBox x:Name="PostsConfigTextBox"
                                         materialDesign:HintAssist.Hint="Posts config JSON (optional)"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         MinLines="3"
                                         MaxLines="6"
                                         Margin="0,0,0,10"/>

                                <Button x:Name="StartOfButton"
                                        Height="36"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#2196F3"
                                        Foreground="White"
                                        Click="StartOf_Click">
                                    Start OF
                                </Button>

                                <TextBlock x:Name="OfStatusText" Text="Idle" FontSize="11" Foreground="#666" Margin="0,10,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Add Post Button -->
                        <Button Grid.Row="2"
                                Margin="15"
                                Height="40"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#2196F3"
                                Foreground="White"
                                Click="AddPost_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Add Post" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <!-- Posts List Header -->
                        <Border Grid.Row="3" Background="#F5F5F5" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,1,0,1">
                            <TextBlock Text="PRODUCTION POSTS" FontSize="10" FontWeight="Bold" Foreground="#666"/>
                        </Border>

                        <!-- Production Posts List -->
                        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="PostsListPanel" Margin="0">
                                <!-- Posts will be added dynamically -->
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Flow Visualization Canvas -->
                <Border Grid.Column="1" Background="#F5F5F5">
                    <ScrollViewer x:Name="CanvasScrollViewer" HorizontalScrollBarVisibility="Auto" 
                                 VerticalScrollBarVisibility="Auto"
                                 PreviewMouseWheel="CanvasScrollViewer_PreviewMouseWheel">
                            <Canvas x:Name="FlowCanvas"
                                Width="2000"
                                Height="2000"
                                AllowDrop="True"
                                Drop="FlowCanvas_Drop"
                                DragOver="FlowCanvas_DragOver"
                                MouseMove="FlowCanvas_MouseMove"
                                MouseLeftButtonDown="FlowCanvas_MouseLeftButtonDown"
                                MouseLeftButtonUp="FlowCanvas_MouseLeftButtonUp"
                                Cursor="Arrow"
                                RenderTransformOrigin="0.5,0.5">
                            
                            <Canvas.RenderTransform>
                                <ScaleTransform x:Name="CanvasScaleTransform" ScaleX="1" ScaleY="1"/>
                            </Canvas.RenderTransform>
                            
                            <!-- Grid Background -->
                            <Canvas.Background>
                                <DrawingBrush TileMode="Tile" Viewport="0,0,50,50" ViewportUnits="Absolute">
                                    <DrawingBrush.Drawing>
                                        <GeometryDrawing>
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,0,50,50"/>
                                            </GeometryDrawing.Geometry>
                                            <GeometryDrawing.Pen>
                                                <Pen Brush="#E0E0E0" Thickness="0.5"/>
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Canvas.Background>

                            <!-- Connection lines will be drawn here -->
                            <Canvas x:Name="ConnectionLinesCanvas" 
                                    Width="2000" 
                                    Height="2000" 
                                    Background="Transparent" 
                                    IsHitTestVisible="False" />

                                <!-- Piece markers (animated) -->
                                <Canvas x:Name="PieceMarkersCanvas"
                                    Width="2000"
                                    Height="2000"
                                    Background="Transparent"
                                    IsHitTestVisible="False"
                                    Panel.ZIndex="50" />
                            
                            <!-- Posts will be added here dynamically -->
                        </Canvas>
                    </ScrollViewer>
                </Border>

                <!-- All lines stacked view (visible when GLOBAL selected) -->
                <ScrollViewer x:Name="AllLinesScrollViewer" Grid.ColumnSpan="2" Visibility="Collapsed" VerticalScrollBarVisibility="Auto" Background="#F5F5F5">
                    <StackPanel x:Name="AllLinesStack" Margin="12" />
                </ScrollViewer>
            </Grid>

            <!-- Kanban Board View -->
            <Grid x:Name="KanbanViewPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Kanban + IoT/COM quick controls (merged workflow) -->
                <Border Grid.Row="0"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="20,20,20,10">
                    <DockPanel LastChildFill="True">
                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="COM" FontWeight="SemiBold" Foreground="#334155" VerticalAlignment="Center"/>

                            <ComboBox x:Name="KanbanComPortComboBox"
                                     Width="120"
                                     Margin="10,0,0,0"
                                     IsEditable="True"
                                     ToolTip="COM port (ex: COM3)"/>

                            <Button x:Name="KanbanRefreshPortsButton"
                                    Content="Refresh"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Click="KanbanRefreshPortsButton_Click"/>

                            <Button x:Name="KanbanConnectComButton"
                                    Content="Connect"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#0ea5e9"
                                    Foreground="White"
                                    Click="KanbanConnectComButton_Click"/>

                                <Button x:Name="KanbanStopProductionButton"
                                    Content="Stop production"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#ef4444"
                                    Foreground="White"
                                    Click="KanbanStopProductionButton_Click"/>

                                <Button x:Name="KanbanEndOfButton"
                                    Content="End OF"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#b91c1c"
                                    Foreground="White"
                                    Click="KanbanEndOfButton_Click"/>

                                <Button x:Name="KanbanContinueSelectedButton"
                                    Content="Continue selected"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#22c55e"
                                    Foreground="White"
                                    Click="KanbanContinueSelectedButton_Click"/>
                        </StackPanel>

                        <TextBlock x:Name="KanbanComStatusText"
                                   Text="Disconnected"
                                   Foreground="#64748b"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"
                                   TextTrimming="CharacterEllipsis"/>
                    </DockPanel>
                </Border>

                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid Margin="20,0,20,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="280"/>
                        </Grid.ColumnDefinitions>

                        <!-- Backlog Column -->
                        <Border Grid.Column="0" 
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                CornerRadius="8"
                                Margin="0,0,10,0"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="BACKLOG" 
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#757575"/>
                                    <TextBlock x:Name="BacklogCount"
                                              Text="0 tasks" 
                                              FontSize="11"
                                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                              AllowDrop="True"
                                              Drop="KanbanColumn_Drop"
                                              DragOver="KanbanColumn_DragOver">
                                    <StackPanel x:Name="BacklogColumn"
                                               AllowDrop="True"
                                               Drop="KanbanColumn_Drop"
                                               DragOver="KanbanColumn_DragOver"
                                               MinHeight="400">
                                        <!-- Task cards will be added here -->
                                    </StackPanel>
                                </ScrollViewer>

                                <Button Grid.Row="2"
                                        Content="+ Add Task"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,10,0,0"
                                        Click="AddTask_Click"
                                        Tag="Backlog"/>
                            </Grid>
                        </Border>

                        <!-- To Do Column -->
                        <Border Grid.Column="1" 
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                CornerRadius="8"
                                Margin="0,0,10,0"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="TO DO" 
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#2196F3"/>
                                    <TextBlock x:Name="ToDoCount"
                                              Text="0 tasks" 
                                              FontSize="11"
                                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                              AllowDrop="True"
                                              Drop="KanbanColumn_Drop"
                                              DragOver="KanbanColumn_DragOver">
                                    <StackPanel x:Name="ToDoColumn"
                                               AllowDrop="True"
                                               Drop="KanbanColumn_Drop"
                                               DragOver="KanbanColumn_DragOver"
                                               MinHeight="400">
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- In Progress Column -->
                        <Border Grid.Column="2" 
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                CornerRadius="8"
                                Margin="0,0,10,0"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="IN PROGRESS" 
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#FF9800"/>
                                    <TextBlock x:Name="InProgressCount"
                                              Text="0 tasks" 
                                              FontSize="11"
                                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                              AllowDrop="True"
                                              Drop="KanbanColumn_Drop"
                                              DragOver="KanbanColumn_DragOver">
                                    <StackPanel x:Name="InProgressColumn"
                                               AllowDrop="True"
                                               Drop="KanbanColumn_Drop"
                                               DragOver="KanbanColumn_DragOver"
                                               MinHeight="400">
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Quality Check Column -->
                        <Border Grid.Column="3" 
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                CornerRadius="8"
                                Margin="0,0,10,0"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="QUALITY CHECK" 
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#9C27B0"/>
                                    <TextBlock x:Name="QualityCheckCount"
                                              Text="0 tasks" 
                                              FontSize="11"
                                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                              AllowDrop="True"
                                              Drop="KanbanColumn_Drop"
                                              DragOver="KanbanColumn_DragOver">
                                    <StackPanel x:Name="QualityCheckColumn"
                                               AllowDrop="True"
                                               Drop="KanbanColumn_Drop"
                                               DragOver="KanbanColumn_DragOver"
                                               MinHeight="400">
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Done Column -->
                        <Border Grid.Column="4" 
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                CornerRadius="8"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock Text="DONE" 
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#4CAF50"/>
                                    <TextBlock x:Name="DoneCount"
                                              Text="0 tasks" 
                                              FontSize="11"
                                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                              AllowDrop="True"
                                              Drop="KanbanColumn_Drop"
                                              DragOver="KanbanColumn_DragOver">
                                    <StackPanel x:Name="DoneColumn"
                                               AllowDrop="True"
                                               Drop="KanbanColumn_Drop"
                                               DragOver="KanbanColumn_DragOver"
                                               MinHeight="400">
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
