<Page x:Class="DigitalisationERP.Desktop.Views.MeetingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="{DynamicResource MaterialDesignPaper}"
      Title="Meetings">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Meetings" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource MaterialDesignBody}"/>
            <Button x:Name="NewMeetingButton" Style="{StaticResource MaterialDesignRaisedButton}" 
                    Margin="0,15,0,0" Click="NewMeeting_Click" Width="150" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="New Meeting" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Meetings List -->
            <materialDesign:Card Grid.Column="0" Margin="20,0,10,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Upcoming Meetings" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <ListBox x:Name="MeetingsList" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
                                            <materialDesign:PackIcon Kind="CalendarCheck" Width="20" Height="20" 
                                                                   Foreground="#2196F3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="1" Text="{Binding DateTime, StringFormat='ðŸ“… {0:MMM dd, yyyy HH:mm}'}" 
                                                  Foreground="#666" FontSize="12" Margin="30,0,0,3"/>
                                        <TextBlock Grid.Row="2" Text="{Binding Attendees, StringFormat='ðŸ‘¥ {0}'}" 
                                                  Foreground="#999" FontSize="11" Margin="30,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </materialDesign:Card>

            <!-- Sidebar - Today's Meetings -->
            <materialDesign:Card Grid.Column="1" Margin="0,20,20,20" Padding="15">
                <StackPanel>
                    <TextBlock Text="Today's Meetings" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>
                    <ListBox x:Name="TodayMeetingsList" MaxHeight="400" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontSize="12" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding DateTime, StringFormat='HH:mm'}" 
                                                  FontSize="11" Foreground="#2196F3"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>
