<Page x:Class="DigitalisationERP.Desktop.Views.BackupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="{DynamicResource MaterialDesignPaper}"
      Title="Backup">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Backup &amp; Recovery" FontSize="28" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Button x:Name="BackupNowButton" Style="{StaticResource MaterialDesignRaisedButton}" 
                        Click="BackupNow_Click" Width="130" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CloudDownload" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Backup Now" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="RestoreButton" Style="{StaticResource MaterialDesignRaisedSecondary}" 
                        Click="Restore_Click" Width="130" Margin="10,0,0,0" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CloudUpload" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Restore" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Backup Status -->
            <materialDesign:Card Grid.Column="0" Margin="20,0,10,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Current Backup Status" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Last Backup:" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="January 11, 2026 - 02:30 AM" FontSize="13" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Backup Size:" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="2.45 GB" FontSize="13" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3">
                        <TextBlock Text="Storage Location:" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="D:\Backups\Database" FontSize="13" FontWeight="SemiBold" Margin="0,5,0,0"/>
                        <TextBlock Text="Available Space: 450 GB" FontSize="11" Foreground="#999" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Backup Schedule -->
            <materialDesign:Card Grid.Column="1" Margin="10,0,20,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Backup Schedule" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                    <CheckBox Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Automatic Daily Backup (02:00 AM)" FontSize="12"/>
                    </CheckBox>

                    <CheckBox Grid.Row="2" IsChecked="True" Margin="0,0,0,15">
                        <TextBlock Text="Weekly Full Backup (Sunday 03:00 AM)" FontSize="12"/>
                    </CheckBox>

                    <CheckBox Grid.Row="3" IsChecked="True">
                        <TextBlock Text="Email backup report" FontSize="12"/>
                    </CheckBox>
                </Grid>
            </materialDesign:Card>

            <!-- Backup History -->
            <materialDesign:Card Grid.Column="0" Grid.ColumnSpan="2" Margin="20,0,20,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Backup History" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <ListBox x:Name="BackupHistory" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Date}" FontSize="11" Foreground="#999"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="{Binding Size}" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Status}" FontSize="12" Foreground="#4CAF50" VerticalAlignment="Center"/>

                                        <Button Grid.Column="3" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Restore">
                                            <materialDesign:PackIcon Kind="Restore" Width="20" Height="20"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>
