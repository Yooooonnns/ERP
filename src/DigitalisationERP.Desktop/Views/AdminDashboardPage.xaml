<Page x:Class="DigitalisationERP.Desktop.Views.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Dashboard Administrateur" Height="800" Width="1400">
    
    <Page.Resources>
        <Style x:Key="KpiCard" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="UniformCornerRadius" Value="8"/>
        </Style>
        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Tableau de Bord Administrateur" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Margin="0,0,0,10"/>
                <TextBlock x:Name="WelcomeText" 
                          FontSize="16" 
                          Foreground="Gray"
                          Text="Bienvenue sur le tableau de bord principal"/>
            </StackPanel>

            <!-- KPIs Row -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
                <materialDesign:Card Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="AccountMultiple" 
                                                    Width="24" 
                                                    Height="24" 
                                                    Foreground="#2196F3"
                                                    VerticalAlignment="Center"/>
                            <TextBlock Text="Utilisateurs Actifs" 
                                      Style="{StaticResource KpiTitle}"
                                      Margin="10,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="ActiveUsersCount" 
                                  Text="248" 
                                  Style="{StaticResource KpiValue}"
                                  Foreground="#2196F3"/>
                        <TextBlock Text="+12% vs mois dernier" 
                                  FontSize="12" 
                                  Foreground="Green"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Factory" 
                                                    Width="24" 
                                                    Height="24" 
                                                    Foreground="#4CAF50"
                                                    VerticalAlignment="Center"/>
                            <TextBlock Text="Postes de Production" 
                                      Style="{StaticResource KpiTitle}"
                                      Margin="10,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="ProductionPostsCount" 
                                  Text="15" 
                                  Style="{StaticResource KpiValue}"
                                  Foreground="#4CAF50"/>
                        <TextBlock Text="12 en fonctionnement" 
                                  FontSize="12" 
                                  Foreground="Gray"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="ChartLine" 
                                                    Width="24" 
                                                    Height="24" 
                                                    Foreground="#FF9800"
                                                    VerticalAlignment="Center"/>
                            <TextBlock Text="OEE Moyen" 
                                      Style="{StaticResource KpiTitle}"
                                      Margin="10,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="AverageOeeValue" 
                                  Text="78.5%" 
                                  Style="{StaticResource KpiValue}"
                                  Foreground="#FF9800"/>
                        <TextBlock Text="+3.2% ce mois-ci" 
                                  FontSize="12" 
                                  Foreground="Green"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Robot" 
                                                    Width="24" 
                                                    Height="24" 
                                                    Foreground="#9C27B0"
                                                    VerticalAlignment="Center"/>
                            <TextBlock Text="Capteurs IoT" 
                                      Style="{StaticResource KpiTitle}"
                                      Margin="10,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="IoTSensorsCount" 
                                  Text="47" 
                                  Style="{StaticResource KpiValue}"
                                  Foreground="#9C27B0"/>
                        <TextBlock x:Name="IoTStatusText" 
                                  Text="45 opérationnels" 
                                  FontSize="12" 
                                  Foreground="Gray"/>
                    </StackPanel>
                </materialDesign:Card>
            </UniformGrid>

            <!-- Charts Row -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Production Chart -->
                <materialDesign:Card Grid.Column="0" Margin="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Production Quotidienne (7 derniers jours)" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,20"/>
                        <Grid Height="300">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <!-- Simple bar visualization -->
                            <ItemsControl Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="7" Rows="1" Height="250" Width="500"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <Border Background="#4CAF50" Margin="5" VerticalAlignment="Bottom" Height="190" ToolTip="2340 unités"/>
                                <Border Background="#4CAF50" Margin="5" VerticalAlignment="Bottom" Height="210" ToolTip="2580 unités"/>
                                <Border Background="#4CAF50" Margin="5" VerticalAlignment="Bottom" Height="220" ToolTip="2720 unités"/>
                                <Border Background="#4CAF50" Margin="5" VerticalAlignment="Bottom" Height="200" ToolTip="2450 unités"/>
                                <Border Background="#4CAF50" Margin="5" VerticalAlignment="Bottom" Height="235" ToolTip="2890 unités"/>
                                <Border Background="#2196F3" Margin="5" VerticalAlignment="Bottom" Height="250" ToolTip="3100 unités (Aujourd'hui)"/>
                                <Border Background="#9E9E9E" Margin="5" VerticalAlignment="Bottom" Height="240" ToolTip="2950 unités (Prévision)"/>
                            </ItemsControl>
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <TextBlock Text="Lun" Margin="20,0" FontSize="11"/>
                                <TextBlock Text="Mar" Margin="20,0" FontSize="11"/>
                                <TextBlock Text="Mer" Margin="20,0" FontSize="11"/>
                                <TextBlock Text="Jeu" Margin="20,0" FontSize="11"/>
                                <TextBlock Text="Ven" Margin="20,0" FontSize="11"/>
                                <TextBlock Text="Sam" Margin="20,0" FontSize="11" FontWeight="Bold" Foreground="#2196F3"/>
                                <TextBlock Text="Dim" Margin="20,0" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Alerts Panel -->
                <materialDesign:Card Grid.Column="1" Margin="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Alertes Actives" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,15"/>
                        
                        <StackPanel x:Name="AlertsPanel">
                            <!-- Alert 1 -->
                            <Border Background="#FFF3E0" 
                                   CornerRadius="4" 
                                   Padding="10" 
                                   Margin="0,0,0,8">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AlertCircle" 
                                                               Width="16" 
                                                               Height="16" 
                                                               Foreground="#FF9800"
                                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="POST-03: Température élevée" 
                                                  FontSize="13" 
                                                  FontWeight="SemiBold"
                                                  Margin="8,0,0,0"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="82°C détecté - Seuil: 80°C" 
                                              FontSize="11" 
                                              Foreground="Gray"
                                              Margin="24,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Alert 2 -->
                            <Border Background="#FFEBEE" 
                                   CornerRadius="4" 
                                   Padding="10" 
                                   Margin="0,0,0,8">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AlertOctagon" 
                                                               Width="16" 
                                                               Height="16" 
                                                               Foreground="#F44336"
                                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="Robot MAINT-BOT-01: Batterie faible" 
                                                  FontSize="13" 
                                                  FontWeight="SemiBold"
                                                  Margin="8,0,0,0"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="15% restant - Retour station requis" 
                                              FontSize="11" 
                                              Foreground="Gray"
                                              Margin="24,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Alert 3 -->
                            <Border Background="#E8F5E9" 
                                   CornerRadius="4" 
                                   Padding="10">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CheckCircle" 
                                                               Width="16" 
                                                               Height="16" 
                                                               Foreground="#4CAF50"
                                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="Système IoT opérationnel" 
                                                  FontSize="13" 
                                                  FontWeight="SemiBold"
                                                  Margin="8,0,0,0"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="Tous les capteurs répondent" 
                                              FontSize="11" 
                                              Foreground="Gray"
                                              Margin="24,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <Button Content="Voir toutes les alertes" 
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Margin="0,15,0,0"
                               HorizontalAlignment="Stretch"
                               Click="ViewAllAlerts_Click"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Quick Actions Row -->
            <materialDesign:Card Grid.Row="3" Margin="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="Actions Rapides" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,15"/>
                    
                    <UniformGrid Columns="3" Rows="1">
                           <Button Margin="5" 
                               Height="80" 
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Click="CreateUser_Click">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="AccountPlus" 
                                                        Width="32" 
                                                        Height="32"/>
                                <TextBlock Text="Créer Utilisateur" 
                                          FontSize="12" 
                                          Margin="0,8,0,0"/>
                            </StackPanel>
                        </Button>

                           <Button Margin="5" 
                               Height="80" 
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Click="GenerateReport_Click">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="FileDocument" 
                                                        Width="32" 
                                                        Height="32"/>
                                <TextBlock Text="Générer Rapport" 
                                          FontSize="12" 
                                          Margin="0,8,0,0"/>
                            </StackPanel>
                        </Button>

                           <Button Margin="5" 
                               Height="80" 
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Click="ConfigSystem_Click">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="DatabaseCog" 
                                                        Width="32" 
                                                        Height="32"/>
                                <TextBlock Text="Config Système" 
                                          FontSize="12" 
                                          Margin="0,8,0,0"/>
                            </StackPanel>
                        </Button>
                    </UniformGrid>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </ScrollViewer>
</Page>
