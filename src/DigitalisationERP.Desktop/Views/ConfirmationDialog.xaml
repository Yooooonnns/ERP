<Window x:Class="DigitalisationERP.Desktop.Views.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚠️ Confirmation Requise" 
        Height="300" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1e293b"
        ResizeMode="NoResize">
    <Border BorderBrush="#ef4444" BorderThickness="2" CornerRadius="8" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#dc2626" Padding="15" CornerRadius="6,6,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TitleText" 
                               Text="ATTENTION - Action Critique" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Message Content -->
            <Border Grid.Row="1" Background="#334155" Margin="10" Padding="20" CornerRadius="6">
                <StackPanel>
                    <TextBlock x:Name="MessageText" 
                               Text="Êtes-vous sûr de vouloir effectuer cette action ?"
                               FontSize="14"
                               Foreground="White"
                               TextWrapping="Wrap"
                               LineHeight="22"/>
                    
                    <Border Background="#1e293b" 
                            Padding="10" 
                            Margin="0,15,0,0" 
                            CornerRadius="4">
                        <TextBlock x:Name="DetailsText"
                                   Text="Cette action ne peut pas être annulée."
                                   FontSize="12"
                                   Foreground="#94a3b8"
                                   TextWrapping="Wrap"
                                   FontStyle="Italic"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <Border Grid.Row="2" Background="#1e293b" Padding="15" CornerRadius="0,0,6,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox x:Name="ConfirmCheckBox"
                              Grid.Column="0"
                              Content="J'ai lu et compris les risques"
                              Foreground="#94a3b8"
                              VerticalAlignment="Center"
                              Margin="5,0,0,0"/>

                    <Button x:Name="CancelButton"
                            Grid.Column="1"
                            Content="❌ Annuler"
                            Click="CancelButton_Click"
                            Background="#64748b"
                            Foreground="White"
                            Padding="20,10"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            MinWidth="120">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#475569"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="ConfirmButton"
                            Grid.Column="2"
                            Content="✅ Confirmer"
                            Click="ConfirmButton_Click"
                            Background="#dc2626"
                            Foreground="White"
                            Padding="20,10"
                            BorderThickness="0"
                            Cursor="Hand"
                            IsEnabled="{Binding ElementName=ConfirmCheckBox, Path=IsChecked}"
                            MinWidth="120">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#991b1b"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#475569"/>
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
