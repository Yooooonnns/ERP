<Page x:Class="DigitalisationERP.Desktop.Views.SupportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="{DynamicResource MaterialDesignPaper}"
      Title="Support">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Help &amp; Support" FontSize="28" FontWeight="Bold"/>
            <TextBlock Text="Get help and contact support" FontSize="12" Foreground="#666" Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- FAQ -->
            <materialDesign:Card Grid.Column="0" Margin="20,0,10,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Frequently Asked Questions" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <Expander Grid.Row="1" Header="How do I reset my password?" Margin="0,0,0,10">
                        <TextBlock Text="Go to Settings → Account → Reset Password. You will receive an email with instructions." 
                                  TextWrapping="Wrap" Foreground="#666" Margin="15"/>
                    </Expander>

                    <Expander Header="How do I export reports?" Margin="0,0,0,10">
                        <TextBlock Text="Navigate to Reports section and click Export. Choose your desired format (PDF, Excel, or CSV)." 
                                  TextWrapping="Wrap" Foreground="#666" Margin="15"/>
                    </Expander>

                    <Expander Header="How do I backup my data?" Margin="0,0,0,10">
                        <TextBlock Text="Go to Settings → Backup and click 'Backup Now'. You can schedule automatic backups in preferences." 
                                  TextWrapping="Wrap" Foreground="#666" Margin="15"/>
                    </Expander>

                    <Expander Header="What is the system minimum requirement?" Margin="0,0,0,10">
                        <TextBlock Text="Windows 10 or later, .NET 9.0, 4GB RAM, 500MB disk space." 
                                  TextWrapping="Wrap" Foreground="#666" Margin="15"/>
                    </Expander>
                </Grid>
            </materialDesign:Card>

            <!-- Contact Support -->
            <materialDesign:Card Grid.Column="1" Margin="10,0,20,20" Padding="20">
                <StackPanel>
                    <TextBlock Text="Contact Support" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Email" FontSize="12" Foreground="#666" FontWeight="Medium" Margin="0,0,0,5"/>
                        <TextBlock Text="support@digitalisationerrp.com" FontSize="12" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Phone" FontSize="12" Foreground="#666" FontWeight="Medium" Margin="0,0,0,5"/>
                        <TextBlock Text="+1 (555) 123-4567" FontSize="12" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Support Hours" FontSize="12" Foreground="#666" FontWeight="Medium" Margin="0,0,0,5"/>
                        <TextBlock Text="Monday - Friday: 8:00 AM - 6:00 PM" FontSize="12" Margin="0,2,0,0"/>
                        <TextBlock Text="Saturday: 10:00 AM - 2:00 PM" FontSize="12"/>
                    </StackPanel>

                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Width="180" HorizontalAlignment="Left" Click="SendSupport_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Email" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Send Email" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </materialDesign:Card>

            <!-- Resources -->
            <materialDesign:Card Grid.Column="0" Grid.ColumnSpan="2" Margin="20,0,20,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Resources &amp; Documentation" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <materialDesign:PackIcon Kind="FileDocument" Width="48" Height="48" Foreground="#2196F3" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <Button Style="{StaticResource MaterialDesignFlatButton}" Click="OpenResource_Click" Tag="UserGuide">
                                <TextBlock Text="User Guide" FontSize="12" TextAlignment="Center"/>
                            </Button>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,20,0">
                            <materialDesign:PackIcon Kind="BookOpen" Width="48" Height="48" Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <Button Style="{StaticResource MaterialDesignFlatButton}" Click="OpenResource_Click" Tag="APIDocs">
                                <TextBlock Text="API Docs" FontSize="12" TextAlignment="Center"/>
                            </Button>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,20,0">
                            <materialDesign:PackIcon Kind="Video" Width="48" Height="48" Foreground="#FF9800" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <Button Style="{StaticResource MaterialDesignFlatButton}" Click="OpenResource_Click" Tag="Tutorials">
                                <TextBlock Text="Tutorials" FontSize="12" TextAlignment="Center"/>
                            </Button>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <materialDesign:PackIcon Kind="Information" Width="48" Height="48" Foreground="#9C27B0" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <Button Style="{StaticResource MaterialDesignFlatButton}" Click="OpenResource_Click" Tag="Community">
                                <TextBlock Text="Community" FontSize="12" TextAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>
