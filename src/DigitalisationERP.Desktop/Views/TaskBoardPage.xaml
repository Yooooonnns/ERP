<Page x:Class="DigitalisationERP.Desktop.Views.TaskBoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:controls="clr-namespace:DigitalisationERP.Desktop.Controls"
      Title="Task Board" Height="700" Width="1200">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Task Board" FontSize="28" FontWeight="Bold"/>
            <TextBlock Text="Kanban simple + feedback vers managers (stockage local)." FontSize="14" Foreground="Gray"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="UserText" VerticalAlignment="Center" Foreground="Gray"/>

            <Button Grid.Column="1" Content="RafraÃ®chir" Style="{StaticResource MaterialDesignOutlinedButton}" Click="Refresh_Click"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="To Do" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="TodoPanel"/>
                    </ScrollViewer>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="1" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="In Progress" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="InProgressPanel"/>
                    </ScrollViewer>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="2" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Done" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="DonePanel"/>
                    </ScrollViewer>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="3" Padding="10">
                <StackPanel>
                    <TextBlock Text="Blocked" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="BlockedPanel"/>
                    </ScrollViewer>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>
