<Window x:Class="DigitalisationERP.Desktop.Views.AddKanbanTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Fabrication Order" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="New Fabrication Order (OF)" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBox x:Name="TaskTitleTextBox"
                         materialDesign:HintAssist.Hint="OF Number (ex: OF-2026-001)"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="TaskDescriptionTextBox"
                         materialDesign:HintAssist.Hint="Description"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinLines="3"
                         MaxLines="5"
                         Margin="0,0,0,15"/>

                <ComboBox x:Name="StatusComboBox"
                          materialDesign:HintAssist.Hint="Status"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="Backlog" IsSelected="True"/>
                    <ComboBoxItem Content="ToDo"/>
                    <ComboBoxItem Content="InProgress"/>
                    <ComboBoxItem Content="QualityCheck"/>
                    <ComboBoxItem Content="Done"/>
                </ComboBox>

                <ComboBox x:Name="PriorityComboBox"
                          materialDesign:HintAssist.Hint="Priority"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="Low"/>
                    <ComboBoxItem Content="Medium" IsSelected="True"/>
                    <ComboBoxItem Content="High"/>
                    <ComboBoxItem Content="Critical"/>
                </ComboBox>

                <TextBox x:Name="AssignedToTextBox"
                         materialDesign:HintAssist.Hint="Assigned To"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="EstimatedHoursTextBox"
                         materialDesign:HintAssist.Hint="Quantity"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"
                         PreviewTextInput="NumberValidation_PreviewTextInput"/>

                <DatePicker x:Name="DueDatePicker"
                            materialDesign:HintAssist.Hint="Due Date"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="CANCEL" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="Cancel_Click"
                    Width="100"
                    Margin="0,0,10,0"/>
            <Button Content="ADD TASK" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="AddTask_Click"
                    Width="120"/>
        </StackPanel>
    </Grid>
</Window>
