<UserControl x:Class="DigitalisationERP.Desktop.Views.IotConsolePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#0f172a">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1e293b" Padding="20" BorderBrush="#334155" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ–¥ï¸ Console IoT Temps RÃ©el" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Monitoring capteurs, robots AGV/AMR et Ã©vÃ©nements systÃ¨me" 
                               FontSize="12" 
                               Foreground="#94a3b8" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ExportLogsButton"
                            Content="ðŸ’¾ Exporter Logs"
                            Click="ExportLogsButton_Click"
                            Background="#10b981"
                            Foreground="White"
                            Padding="15,8"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="SimulateFailureButton"
                            Content="ðŸš¨ Simuler Panne"
                            Click="SimulateFailureButton_Click"
                            Background="#ef4444"
                            Foreground="White"
                            Padding="15,8"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="SendSupplyRobotButton"
                            Content="ðŸ“¦ Livraison Robot"
                            Click="SendSupplyRobotButton_Click"
                            Background="#3b82f6"
                            Foreground="White"
                            Padding="15,8"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Logs Console -->
            <Border Grid.Column="0" Background="#1e293b" CornerRadius="8" BorderBrush="#334155" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#0f172a" Padding="15" CornerRadius="8,8,0,0">
                        <TextBlock Text="ðŸ“œ Console Ã‰vÃ©nements" FontSize="16" FontWeight="Bold" Foreground="#f1f5f9"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl x:Name="LogsListBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0f172a" 
                                            Padding="10" 
                                            Margin="0,2" 
                                            CornerRadius="4"
                                            BorderBrush="#334155"
                                            BorderThickness="1">
                                        <TextBlock Text="{Binding DisplayText}" 
                                                   Foreground="{Binding LevelColor}" 
                                                   FontFamily="Consolas" 
                                                   FontSize="11"
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right: Status Panels -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Sensors Status -->
                <Border Grid.Row="0" Background="#1e293b" CornerRadius="8" BorderBrush="#334155" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#0f172a" Padding="15" CornerRadius="8,8,0,0">
                            <TextBlock Text="ðŸŒ¡ï¸ Capteurs IoT" FontSize="14" FontWeight="Bold" Foreground="#f1f5f9"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                            <ItemsControl x:Name="SensorsListBox">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#0f172a" 
                                                Padding="8" 
                                                Margin="0,3" 
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="15"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- LED Indicator -->
                                                <Ellipse Grid.Column="0" 
                                                         Width="10" 
                                                         Height="10" 
                                                         Fill="{Binding StateColor}" 
                                                         VerticalAlignment="Center"/>

                                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                                    <TextBlock Text="{Binding SensorId}" 
                                                               FontSize="10" 
                                                               Foreground="#94a3b8" 
                                                               FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding DisplayText}" 
                                                               FontSize="9" 
                                                               Foreground="#cbd5e1"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Robots Status -->
                <Border Grid.Row="2" Background="#1e293b" CornerRadius="8" BorderBrush="#334155" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#0f172a" Padding="15" CornerRadius="8,8,0,0">
                            <TextBlock Text="ðŸ¤– Robots AGV/AMR" FontSize="14" FontWeight="Bold" Foreground="#f1f5f9"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                            <ItemsControl x:Name="RobotsListBox">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#0f172a" 
                                                Padding="12" 
                                                Margin="0,5" 
                                                CornerRadius="6"
                                                BorderBrush="{Binding StatusColor}"
                                                BorderThickness="2">
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding RobotId}" 
                                                               FontSize="11" 
                                                               Foreground="White" 
                                                               FontWeight="Bold"/>

                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Status}" 
                                                               FontSize="9" 
                                                               Foreground="{Binding StatusColor}"
                                                               FontWeight="Bold"/>
                                                </Grid>

                                                <TextBlock Text="{Binding CurrentTask}" 
                                                           FontSize="9" 
                                                           Foreground="#94a3b8"
                                                           Margin="0,5,0,0"
                                                           TextWrapping="Wrap"/>

                                                <ProgressBar Value="{Binding BatteryLevel}" 
                                                             Maximum="100" 
                                                             Height="6" 
                                                             Margin="0,8,0,0"
                                                             Foreground="#10b981"/>

                                                <TextBlock Text="{Binding BatteryLevel, StringFormat='ðŸ”‹ Batterie: {0}%'}" 
                                                           FontSize="8" 
                                                           Foreground="#94a3b8"
                                                           Margin="0,3,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
