<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="DigitalisationERP.Desktop.Views.MaintenancePageAdvanced"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#0F172A"
        Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#111827" BorderBrush="#1E293B" BorderThickness="0,0,0,1" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Maintenance" FontSize="18" FontWeight="Bold" Foreground="#60A5FA"/>
                    <Border Background="#1E293B" CornerRadius="6" Padding="8,4" VerticalAlignment="Center" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Line" Foreground="#94A3B8"/>
                            <ComboBox x:Name="LineSelector" Width="220" SelectionChanged="LineSelector_SelectionChanged" Margin="6,0,0,0">
                                <ComboBoxItem Content="All lines" Tag="ALL" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ComboBox x:Name="InjectPostSelector" Width="170" Margin="0,0,8,0"/>
                    <ComboBox x:Name="InjectTroubleTypeSelector" Width="170" Margin="0,0,8,0"/>
                    <Button x:Name="RefreshButton" Content="Refresh" Click="RefreshButton_Click" Padding="16,8" Background="#2563EB" Foreground="White" BorderBrush="#1D4ED8"/>
                    <Button x:Name="InjectPanneButton" Content="Inject panne" Click="InjectPanneButton_Click" Padding="16,8" Background="#DC2626" Foreground="White" BorderBrush="#B91C1C" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- KPI STRIP -->
        <Grid Grid.Row="1" Margin="12,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Background="#111827" BorderBrush="#1F2937" BorderThickness="1" CornerRadius="10" Padding="14" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Active posts" Foreground="#9CA3AF" FontSize="12"/>
                    <TextBlock x:Name="ActivePostsText" Text="0" FontSize="26" FontWeight="Bold" Foreground="#22C55E"/>
                </StackPanel>
            </Border>
            <Border Background="#111827" BorderBrush="#1F2937" BorderThickness="1" CornerRadius="10" Padding="14" Grid.Column="1" Margin="12,0,0,0">
                <StackPanel>
                    <TextBlock Text="Critical alerts" Foreground="#9CA3AF" FontSize="12"/>
                    <TextBlock x:Name="CriticalAlertsText" Text="0" FontSize="26" FontWeight="Bold" Foreground="#FACC15"/>
                </StackPanel>
            </Border>
            <Border Background="#111827" BorderBrush="#1F2937" BorderThickness="1" CornerRadius="10" Padding="14" Grid.Column="2" Margin="12,0,0,0">
                <StackPanel>
                    <TextBlock Text="Robot output" Foreground="#9CA3AF" FontSize="12"/>
                    <TextBlock x:Name="RobotStatusText" Text="Idle" FontSize="26" FontWeight="Bold" Foreground="#38BDF8"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Production posts + health -->
            <Border Background="#0B1224" BorderBrush="#1E293B" BorderThickness="1" CornerRadius="10" Padding="14" Grid.Column="0">
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <TextBlock Text="Line snapshot" DockPanel.Dock="Left" FontWeight="SemiBold" Foreground="#E5E7EB"/>
                        <TextBlock x:Name="LineSummaryText" DockPanel.Dock="Right" Foreground="#94A3B8"/>
                    </DockPanel>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Height="360">
                        <WrapPanel x:Name="PostsPanel" ItemWidth="220" ItemHeight="120" />
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Alerts + robot output -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="12,0,0,0">
                <Border Background="#0B1224" BorderBrush="#1E293B" BorderThickness="1" CornerRadius="10" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Active alerts" FontWeight="SemiBold" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                        <ListBox x:Name="AlertsList" Height="220" Background="#0B1224" BorderThickness="0" Foreground="#E5E7EB" />
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="In progress" Click="MarkInProgressButton_Click" Padding="10,6" Background="#2563EB" Foreground="White" BorderBrush="#1D4ED8"/>
                            <Button Grid.Column="2" Content="Fixed" Click="MarkFixedButton_Click" Padding="10,6" Background="#16A34A" Foreground="White" BorderBrush="#15803D"/>
                            <Button Grid.Column="4" Content="Could not fix" Click="MarkCouldNotFixButton_Click" Padding="10,6" Background="#DC2626" Foreground="White" BorderBrush="#B91C1C"/>
                        </Grid>
                    </StackPanel>
                </Border>
                <Border Background="#0B1224" BorderBrush="#1E293B" BorderThickness="1" CornerRadius="10" Padding="12" Margin="0,12,0,0">
                    <StackPanel>
                        <TextBlock Text="Robot feed" FontWeight="SemiBold" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                        <ListBox x:Name="RobotLogList" Height="140" Background="#0B1224" BorderThickness="0" Foreground="#E5E7EB" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- PLANNED MAINTENANCE / INCIDENTS -->
        <Grid Grid.Row="3" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#0B1224" BorderBrush="#1E293B" BorderThickness="1" CornerRadius="10" Padding="12" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Planned maintenance" FontWeight="SemiBold" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                    <ListBox x:Name="PlannedTasksList" Background="#0B1224" BorderThickness="0" Foreground="#E5E7EB" />
                </StackPanel>
            </Border>

            <Border Background="#0B1224" BorderBrush="#1E293B" BorderThickness="1" CornerRadius="10" Padding="12" Grid.Column="1" Margin="12,0,0,0">
                <StackPanel>
                    <TextBlock Text="Latest incidents" FontWeight="SemiBold" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                    <ListBox x:Name="IncidentsList" Background="#0B1224" BorderThickness="0" Foreground="#E5E7EB" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
