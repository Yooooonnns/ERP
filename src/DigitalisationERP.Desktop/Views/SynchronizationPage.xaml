<Page x:Class="DigitalisationERP.Desktop.Views.SynchronizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="{DynamicResource MaterialDesignPaper}"
      Title="Synchronization">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Data Synchronization" FontSize="28" FontWeight="Bold"/>
            <Button x:Name="SyncButton" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,15,0,0" 
                    Width="150" HorizontalAlignment="Left" Click="Sync_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Sync" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Sync Now" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0" Margin="20,0,10,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Sync Status" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" Foreground="#4CAF50" Margin="0,0,10,0"/>
                            <TextBlock Text="Production Data" FontSize="13" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="Last synced: 5 minutes ago" FontSize="11" Foreground="#666" Margin="34,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" Foreground="#4CAF50" Margin="0,0,10,0"/>
                            <TextBlock Text="Inventory Data" FontSize="13" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="Last synced: 10 minutes ago" FontSize="11" Foreground="#666" Margin="34,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle" Width="24" Height="24" Foreground="#FF9800" Margin="0,0,10,0"/>
                            <TextBlock Text="User Data" FontSize="13" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="Pending: 3 changes" FontSize="11" Foreground="#666" Margin="34,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" Foreground="#4CAF50" Margin="0,0,10,0"/>
                            <TextBlock Text="Maintenance Logs" FontSize="13" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="Last synced: 2 minutes ago" FontSize="11" Foreground="#666" Margin="34,5,0,0"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="1" Margin="10,0,20,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Sync History" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <ListBox x:Name="SyncHistory" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="0,8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding Description}" FontSize="12" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="1" Text="{Binding Timestamp}" FontSize="10" Foreground="#999"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>
