<UserControl x:Class="DigitalisationERP.Desktop.Views.InventoryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Toolbar -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16" materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Graph" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Stock Diagram" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="Raw Materials → Production Lines → Finished Products" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="Refresh_Click" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="AddRawMaterial_Click" Margin="0,0,8,0" ToolTip="Create raw material">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cube" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Raw"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="AddLine_Click" Margin="0,0,8,0" ToolTip="Create production line">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Factory" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Line"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="AddFinishedProduct_Click" Margin="0,0,12,0" ToolTip="Create finished product">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Package" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Final"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="DuplicateSelected_Click" Margin="0,0,8,0" ToolTip="Duplicate selected">
                        <materialDesign:PackIcon Kind="ContentCopy" Width="18" Height="18"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="DeleteSelected_Click" Margin="0,0,12,0" ToolTip="Delete selected">
                        <materialDesign:PackIcon Kind="Delete" Width="18" Height="18"/>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="ZoomIn_Click" Margin="0,0,8,0" ToolTip="Zoom In">
                        <materialDesign:PackIcon Kind="MagnifyPlus" Width="20" Height="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="ZoomOut_Click" Margin="0,0,8,0" ToolTip="Zoom Out">
                        <materialDesign:PackIcon Kind="MagnifyMinus" Width="20" Height="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="ResetZoom_Click" ToolTip="Reset Zoom">
                        <materialDesign:PackIcon Kind="FitToPage" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Diagram -->
        <Grid Grid.Row="1" Margin="16">
            <Border Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="2" CornerRadius="8">
                <ScrollViewer x:Name="CanvasScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              PreviewMouseWheel="CanvasScrollViewer_PreviewMouseWheel">
                    <Grid Width="2200" Height="1500" Background="Transparent">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="CanvasScaleTransform" ScaleX="1" ScaleY="1"/>
                        </Grid.RenderTransform>

                        <Canvas x:Name="GridCanvas" IsHitTestVisible="False"/>
                        <Canvas x:Name="InventoryCanvas"
                                Background="Transparent"
                                MouseLeftButtonDown="InventoryCanvas_MouseLeftButtonDown"
                                MouseLeftButtonUp="InventoryCanvas_MouseLeftButtonUp"
                                MouseMove="InventoryCanvas_MouseMove" />
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer Statistics -->
        <Border Grid.Row="2" Background="White" BorderBrush="#DDDDDD" BorderThickness="1,0,0,0" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Raw Materials" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="RawCountText" Text="0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Production Lines" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="LineCountText" Text="0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Finished Products" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="FinalCountText" Text="0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
