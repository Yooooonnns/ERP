<Page x:Class="DigitalisationERP.Desktop.Views.SecurityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="{DynamicResource MaterialDesignPaper}"
      Title="Security">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Security Management" FontSize="28" FontWeight="Bold"/>
            <TextBlock Text="User permissions and access control" FontSize="12" Foreground="#666" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- User Permissions -->
            <materialDesign:Card Grid.Column="0" Margin="20,0,10,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="User Permissions" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <ListBox Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Username}" FontSize="13" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Role}" FontSize="11" Foreground="#666"/>
                                        </StackPanel>

                                        <Button Grid.Column="1" Style="{StaticResource MaterialDesignIconButton}" 
                                               ToolTip="Edit">
                                            <materialDesign:PackIcon Kind="Pencil" Width="20" Height="20"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Admin</System:String>
                        <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Manager</System:String>
                        <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Operator</System:String>
                    </ListBox>
                </Grid>
            </materialDesign:Card>

            <!-- Audit Log -->
            <materialDesign:Card Grid.Column="1" Margin="10,0,20,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Audit Log" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <ListBox x:Name="AuditLog" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="0,8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="{Binding Action}" FontSize="12" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="1" Text="{Binding Timestamp}" FontSize="10" Foreground="#999"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>
