<Window x:Class="DigitalisationERP.Desktop.Views.CreateMaterialDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Create Material" Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderText"
                   Grid.Row="0"
                   Text="Create Material"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,16"/>

        <StackPanel Grid.Row="1">
            <TextBox x:Name="MaterialNumberTextBox"
                     materialDesign:HintAssist.Hint="Material Number"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,12"/>

            <TextBox x:Name="DescriptionTextBox"
                     materialDesign:HintAssist.Hint="Description"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,12"/>

            <TextBox x:Name="UomTextBox"
                     materialDesign:HintAssist.Hint="Unit of Measure (e.g. KG, PC)"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,12"/>

            <TextBox x:Name="InitialStockTextBox"
                     materialDesign:HintAssist.Hint="Initial Stock"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     PreviewTextInput="DecimalValidation_PreviewTextInput"
                     Margin="0,0,0,12"/>

            <TextBlock Text="Tip: you can leave initial stock empty (0)."
                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                       FontSize="11"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="CANCEL" Style="{StaticResource MaterialDesignOutlinedButton}" Click="Cancel_Click" Width="110" Margin="0,0,10,0"/>
            <Button Content="SAVE" Style="{StaticResource MaterialDesignRaisedButton}" Click="Save_Click" Width="130"/>
        </StackPanel>
    </Grid>
</Window>
