<Window x:Class="DigitalisationERP.Desktop.Views.RecordTransactionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Record Inventory Transaction" Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="New Inventory Transaction" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ComboBox x:Name="TransactionTypeComboBox"
                          materialDesign:HintAssist.Hint="Transaction Type"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,0,15"
                          SelectionChanged="TransactionType_Changed">
                    <ComboBoxItem Content="Receipt" IsSelected="True"/>
                    <ComboBoxItem Content="Consumption"/>
                    <ComboBoxItem Content="Transfer"/>
                    <ComboBoxItem Content="Adjustment"/>
                    <ComboBoxItem Content="Return"/>
                    <ComboBoxItem Content="Scrap"/>
                </ComboBox>

                <TextBox x:Name="MaterialCodeTextBox"
                         materialDesign:HintAssist.Hint="Material Code"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="MaterialNameTextBox"
                         materialDesign:HintAssist.Hint="Material Name"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="QuantityTextBox"
                         materialDesign:HintAssist.Hint="Quantity"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"
                         PreviewTextInput="NumberValidation_PreviewTextInput"/>

                <ComboBox x:Name="UnitComboBox"
                          materialDesign:HintAssist.Hint="Unit of Measure"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="pcs" IsSelected="True"/>
                    <ComboBoxItem Content="kg"/>
                    <ComboBoxItem Content="L"/>
                    <ComboBoxItem Content="m"/>
                    <ComboBoxItem Content="box"/>
                    <ComboBoxItem Content="pallet"/>
                </ComboBox>

                <ComboBox x:Name="FromLocationComboBox"
                          materialDesign:HintAssist.Hint="From Location"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="Receiving"/>
                    <ComboBoxItem Content="Raw Materials Zone A"/>
                    <ComboBoxItem Content="Raw Materials Zone B"/>
                    <ComboBoxItem Content="WIP Zone A"/>
                    <ComboBoxItem Content="WIP Zone B"/>
                    <ComboBoxItem Content="Finished Goods"/>
                    <ComboBoxItem Content="Quarantine"/>
                    <ComboBoxItem Content="Shipping"/>
                    <ComboBoxItem Content="External Supplier"/>
                </ComboBox>

                <ComboBox x:Name="ToLocationComboBox"
                          materialDesign:HintAssist.Hint="To Location"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="Receiving"/>
                    <ComboBoxItem Content="Raw Materials Zone A"/>
                    <ComboBoxItem Content="Raw Materials Zone B"/>
                    <ComboBoxItem Content="WIP Zone A"/>
                    <ComboBoxItem Content="WIP Zone B"/>
                    <ComboBoxItem Content="Finished Goods"/>
                    <ComboBoxItem Content="Quarantine"/>
                    <ComboBoxItem Content="Shipping"/>
                    <ComboBoxItem Content="Production"/>
                    <ComboBoxItem Content="Customer"/>
                </ComboBox>

                <TextBox x:Name="ReferenceTextBox"
                         materialDesign:HintAssist.Hint="Reference (PO/Work Order/Batch)"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox x:Name="NotesTextBox"
                         materialDesign:HintAssist.Hint="Notes"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinLines="2"
                         MaxLines="4"
                         Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="CANCEL" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="Cancel_Click"
                    Width="100"
                    Margin="0,0,10,0"/>
            <Button Content="RECORD" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="Record_Click"
                    Width="120"/>
        </StackPanel>
    </Grid>
</Window>
