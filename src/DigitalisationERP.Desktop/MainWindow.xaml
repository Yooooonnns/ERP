<Window x:Class="DigitalisationERP.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Digitalisation ERP - Dashboard" 
        Height="750" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Menu -->
        <Border x:Name="LeftSidebar"
                Grid.Column="0" 
                Background="#1A237E"
                BorderThickness="0,0,1,0"
                BorderBrush="#0D1642">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Brand -->
                <StackPanel Grid.Row="0" Margin="20,30,20,30">
                    <materialDesign:PackIcon Kind="Factory" 
                                           Width="48" 
                                           Height="48" 
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                    <TextBlock Text="Digitalisation ERP" 
                              FontSize="18" 
                              FontWeight="Bold"
                              Foreground="White"
                              TextAlignment="Center"/>
                </StackPanel>

                <!-- Navigation Items -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="NavigationMenuPanel">
                        <Button x:Name="DashboardButton"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Click="NavigationButton_Click"
                                Tag="Dashboard">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>
                                <TextBlock Text="Dashboard" 
                                          FontSize="14"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Click="NavigationButton_Click"
                                Tag="Production">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>
                                <TextBlock Text="Production" 
                                          FontSize="14"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Click="NavigationButton_Click"
                                Tag="Maintenance">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Wrench" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>
                                <TextBlock Text="Maintenance" 
                                          FontSize="14"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Click="NavigationButton_Click"
                                Tag="IotConsole">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Wrench" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>
                                <TextBlock Text="IoT" 
                                          FontSize="14"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Click="NavigationButton_Click"
                                Tag="Inventory">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PackageVariant"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>
                                <TextBlock Text="Inventory" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Click="NavigationButton_Click"
                                Tag="MySchedule">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarCheck"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>
                                <TextBlock Text="My Schedule" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Click="NavigationButton_Click"
                                Tag="MyTasks">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ClipboardCheckOutline"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>
                                <TextBlock Text="My Tasks" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Click="NavigationButton_Click"
                                Tag="TaskBoard">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewColumn"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>
                                <TextBlock Text="Task Board" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Click="NavigationButton_Click"
                                Tag="Feedback">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="MessageAlert"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>
                                <TextBlock Text="Feedback" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Click="NavigationButton_Click"
                                Tag="ShiftPlanner">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarPlus"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>
                                <TextBlock Text="Shift Planner" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- User Info & Actions -->
                <StackPanel Grid.Row="2" Margin="15,15,15,20">
                    <Border x:Name="UserInfoCard"
                            Background="#283593"
                            CornerRadius="5"
                            Padding="15,10"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <materialDesign:PackIcon Kind="Account" 
                                                   Width="32" 
                                                   Height="32"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="UserNameText"
                                          Text="User Name" 
                                          FontWeight="Bold"
                                          FontSize="13"
                                          Foreground="White"/>
                                <TextBlock x:Name="UserRoleText"
                                          Text="User Role" 
                                          FontSize="11"
                                          Foreground="White"
                                          Opacity="0.8"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Quick Actions -->
                    <Button x:Name="SendEmailButton"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Height="36"
                            Margin="0,0,0,10"
                            Foreground="White"
                            BorderBrush="White"
                            Click="SendEmail_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Email" 
                                                   Width="18" 
                                                   Height="18"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Email" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="LogoutButton"
                            Content="LOGOUT"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Height="35"
                            Foreground="White"
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <materialDesign:ColorZone Grid.Row="0" 
                                      Mode="PrimaryMid" 
                                      Padding="20,15"
                                      materialDesign:ElevationAssist.Elevation="Dp4">
                <Grid>
                    <TextBlock x:Name="PageTitleText"
                              Text="Dashboard" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right">
                        <Button x:Name="HomeButton"
                                Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Retour à l'accueil"
                                Foreground="White"
                                Click="HomeButton_Click">
                            <materialDesign:PackIcon Kind="Home" Width="24" Height="24"/>
                        </Button>
                        <Button x:Name="ThemeToggleButton"
                                Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Toggle Dark/Light Theme"
                                Foreground="White"
                                Click="ThemeToggleButton_Click">
                            <materialDesign:PackIcon Kind="ThemeLightDark" Width="24" Height="24"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Email"
                                Foreground="White"
                                Margin="10,0,0,0"
                                Click="NotificationsButton_Click">
                            <materialDesign:PackIcon Kind="Email" Width="24" Height="24"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Help"
                                Foreground="White"
                                Margin="10,0,0,0"
                                Click="HelpButton_Click">
                            <materialDesign:PackIcon Kind="HelpCircle" Width="24" Height="24"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Content Frame -->
            <Grid Grid.Row="1">
                <Frame x:Name="PageFrame"
                       NavigationUIVisibility="Hidden"
                       Padding="20"/>
                <ContentControl x:Name="ContentArea">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 Padding="20">
                        <Grid x:Name="DashboardContent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Welcome Section -->
                        <Border Grid.Row="0" 
                                Background="#2196F3"
                                CornerRadius="8"
                                Padding="30,20"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock x:Name="WelcomeText"
                                          Text="Welcome back, User" 
                                          FontSize="24" 
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                                <TextBlock Text="Production Overview - Real-time Operations Dashboard"
                                          FontSize="12"
                                          Foreground="White"
                                          Opacity="0.95"
                                          Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Quick Stats Cards -->
                        <UniformGrid Grid.Row="1" 
                                    Rows="1" 
                                    Columns="4"
                                    Margin="0,0,0,20">
                            <!-- Production Card -->
                            <materialDesign:Card Margin="0,0,10,0"
                                               Padding="20"
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="ClipboardList" 
                                                               Width="32" 
                                                               Height="32"
                                                               Foreground="#3498DB"
                                                               Margin="0,0,0,10"/>
                                        <TextBlock Text="PRODUCTION ORDERS" 
                                                  FontSize="10"
                                                  FontWeight="Medium"
                                                  Foreground="#7F8C8D"/>
                                        <TextBlock Text="24" 
                                                  FontSize="36"
                                                  FontWeight="Bold"
                                                  Foreground="#2C3E50"
                                                  Margin="0,8,0,0"/>
                                        <TextBlock Text="Active • In Progress" 
                                                  FontSize="11"
                                                  Foreground="#95A5A6"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Inventory Card -->
                            <materialDesign:Card Margin="5,0,5,0"
                                               Padding="20"
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="Package" 
                                                               Width="32" 
                                                               Height="32"
                                                               Foreground="#E67E22"
                                                               Margin="0,0,0,10"/>
                                        <TextBlock Text="INVENTORY ALERTS" 
                                                  FontSize="10"
                                                  FontWeight="Medium"
                                                  Foreground="#7F8C8D"/>
                                        <TextBlock Text="12" 
                                                  FontSize="36"
                                                  FontWeight="Bold"
                                                  Foreground="#2C3E50"
                                                  Margin="0,8,0,0"/>
                                        <TextBlock Text="Below Reorder Point" 
                                                  FontSize="11"
                                                  Foreground="#95A5A6"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Sales Card -->
                            <materialDesign:Card Margin="5,0,5,0"
                                               Padding="20"
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="TrendingUp" 
                                                               Width="32" 
                                                               Height="32"
                                                               Foreground="#27AE60"
                                                               Margin="0,0,0,10"/>
                                        <TextBlock Text="REVENUE TODAY" 
                                                  FontSize="10"
                                                  FontWeight="Medium"
                                                  Foreground="#7F8C8D"/>
                                        <TextBlock Text="$12,450" 
                                                  FontSize="36"
                                                  FontWeight="Bold"
                                                  Foreground="#2C3E50"
                                                  Margin="0,8,0,0"/>
                                        <TextBlock Text="↑ 15% vs. Previous Day" 
                                                  FontSize="11"
                                                  Foreground="#27AE60"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Pending Card -->
                            <materialDesign:Card Margin="10,0,0,0"
                                               Padding="20"
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="AlertCircle" 
                                                               Width="32" 
                                                               Height="32"
                                                               Foreground="#F39C12"
                                                               Margin="0,0,0,10"/>
                                        <TextBlock Text="PENDING ACTIONS" 
                                                  FontSize="10"
                                                  FontWeight="Medium"
                                                  Foreground="#7F8C8D"/>
                                        <TextBlock Text="8" 
                                                  FontSize="36"
                                                  FontWeight="Bold"
                                                  Foreground="#2C3E50"
                                                  Margin="0,8,0,0"/>
                                        <TextBlock Text="Require approval" 
                                                  FontSize="11"
                                                  Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                        </UniformGrid>

                        <!-- Quick Actions Section -->
                        <UniformGrid Grid.Row="2" Rows="1" Columns="4" Margin="0,20,0,0">
                            <!-- Quick Action: New Production Order -->
                            <materialDesign:Card Padding="20"
                                               Margin="0,0,10,0"
                                               materialDesign:ElevationAssist.Elevation="Dp2"
                                               Cursor="Hand"
                                               Tag="QuickAction_NewOrder"
                                               MouseLeftButtonUp="DashboardQuickAction_MouseLeftButtonUp">
                                <StackPanel HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Cog" 
                                                           Width="20" 
                                                           Height="20"
                                                           Foreground="#3498DB"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,10"/>
                                    <TextBlock Text="NEW ORDER" 
                                              FontSize="11"
                                              FontWeight="Medium"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Quick Action: Generate Report -->
                            <materialDesign:Card Padding="20"
                                               Margin="0,0,10,0"
                                               materialDesign:ElevationAssist.Elevation="Dp2"
                                               Cursor="Hand"
                                               Tag="QuickAction_ExportReport"
                                               MouseLeftButtonUp="DashboardQuickAction_MouseLeftButtonUp">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FileExport" 
                                                           Width="32" 
                                                           Height="32"
                                                           Foreground="#27AE60"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,10"/>
                                    <TextBlock Text="EXPORT REPORT" 
                                              FontSize="11"
                                              FontWeight="Medium"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Quick Action: Inventory Check -->
                            <materialDesign:Card Padding="20"
                                               Margin="0,0,10,0"
                                               materialDesign:ElevationAssist.Elevation="Dp2"
                                               Cursor="Hand"
                                               Tag="QuickAction_CheckStock"
                                               MouseLeftButtonUp="DashboardQuickAction_MouseLeftButtonUp">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="PackageVariant" 
                                                           Width="32" 
                                                           Height="32"
                                                           Foreground="#E67E22"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,10"/>
                                    <TextBlock Text="CHECK STOCK" 
                                              FontSize="11"
                                              FontWeight="Medium"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Quick Action: Manage Users -->
                            <materialDesign:Card Padding="20"
                                               Margin="0"
                                               materialDesign:ElevationAssist.Elevation="Dp2"
                                               Cursor="Hand"
                                               Tag="QuickAction_ManageUsers"
                                               MouseLeftButtonUp="DashboardQuickAction_MouseLeftButtonUp">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Account" 
                                                           Width="32" 
                                                           Height="32"
                                                           Foreground="#9B59B6"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,10"/>
                                    <TextBlock Text="MANAGE USERS" 
                                              FontSize="11"
                                              FontWeight="Medium"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </materialDesign:Card>
                        </UniformGrid>

                        <!-- Data Visualization Section -->
                        <Grid Grid.Row="3" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Production Trend Chart -->
                            <materialDesign:Card Grid.Column="0" 
                                               Padding="20"
                                               Margin="0,0,15,0"
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                        <materialDesign:PackIcon Kind="ChartLine" 
                                                               Width="24" 
                                                               Height="24"
                                                               Foreground="#3498DB"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>
                                        <TextBlock Text="PRODUCTION TREND" 
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Text="Last 7 Days" 
                                                  FontSize="11"
                                                  Foreground="#95A5A6"
                                                  VerticalAlignment="Center"
                                                  Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <lvc:CartesianChart Grid.Row="1" 
                                                       x:Name="ProductionChart"
                                                       Height="250"
                                                       Series="{Binding ProductionSeries}"
                                                       XAxes="{Binding ProductionXAxes}"
                                                       YAxes="{Binding ProductionYAxes}"
                                                       TooltipPosition="Top"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Inventory Distribution Chart -->
                            <materialDesign:Card Grid.Column="1" 
                                               Padding="20"
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                        <materialDesign:PackIcon Kind="ChartPie" 
                                                               Width="24" 
                                                               Height="24"
                                                               Foreground="#E67E22"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>
                                        <TextBlock Text="INVENTORY STATUS" 
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <lvc:PieChart Grid.Row="1" 
                                                 x:Name="InventoryChart"
                                                 Height="250"
                                                 Series="{Binding InventorySeries}"
                                                 InitialRotation="-90"
                                                 MaxAngle="360"/>
                                </Grid>
                            </materialDesign:Card>
                        </Grid>

                        </Grid>
                    </ScrollViewer>
                </ContentControl>
            </Grid>
        </Grid>
    </Grid>
</Window>


