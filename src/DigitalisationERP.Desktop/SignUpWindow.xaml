<Window x:Class="DigitalisationERP.Desktop.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DigitalisationERP.Desktop"
        xmlns:conv="clr-namespace:DigitalisationERP.Desktop.Helpers"
        Title="Digital ERP - Inscription" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:StepToVisibilityConverter x:Key="StepToVisibilityConverter"/>
        <conv:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Panneau Gauche - Branding -->
        <Border Grid.Column="0" Background="#F8FAFC" BorderBrush="#EEEEEE" BorderThickness="0,0,1,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,50,0,0">
                <Viewbox Width="120" Height="120" Margin="0,0,0,30">
                    <Path Fill="#0066CC" Data="M19.43 12.98c.04-.32.07-.64.07-.98s-.03-.66-.07-.98l2.11-1.65c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.3-.61-.22l-2.49 1c-.52-.4-1.08-.73-1.69-.98l-.38-2.65C14.46 2.18 14.25 2 14 2h-4c-.25 0-.46.18-.49.42l-.38 2.65c-.61.25-1.17.59-1.69.98l-2.49-1c-.23-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64l2.11 1.65c-.04.32-.07.65-.07.98s.03.66.07.98l-2.11 1.65c-.19.15-.24.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1c.52.4 1.08.73 1.69.98l.38 2.65c.03.24.24.42.49.42h4c.25 0 .46-.18.49-.42l.38-2.65c.61-.25 1.17-.59 1.69-.98l2.49 1c.23.09.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.65zM12 15.5c-1.93 0-3.5-1.57-3.5-3.5s1.57-3.5 3.5-3.5 3.5 1.57 3.5 3.5-1.57 3.5-3.5 3.5z">
                        <Path.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.2" Color="#0066CC" ShadowDepth="0"/>
                        </Path.Effect>
                    </Path>
                </Viewbox>

                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,0">
                    <TextBlock Text="Digital ERP" FontSize="40" FontWeight="Bold" Foreground="#1A1A1A" TextAlignment="Center"/>
                    <TextBlock Text="Rejoignez notre plateforme" FontSize="14" Foreground="#666666" TextAlignment="Center" TextWrapping="Wrap" MaxWidth="250" Margin="0,15,0,0"/>
                    <TextBlock Text="Sécurisé. Moderne. Efficace." FontSize="12" Foreground="#0066CC" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,30,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Ellipse Width="6" Height="6" Fill="#0066CC" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Inscription instantanée" FontSize="11" Foreground="#666666"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Ellipse Width="6" Height="6" Fill="#0066CC" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Vérification par email" FontSize="11" Foreground="#666666"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="6" Height="6" Fill="#0066CC" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Accès instantané" FontSize="11" Foreground="#666666"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Panneau Droit - Formulaire -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="60,80,60,60">
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Créer un compte" FontSize="36" FontWeight="Bold" Foreground="#1A1A1A"/>
                    <TextBlock x:Name="StepTitle" Text="{Binding CurrentStep, StringFormat='Étape {0}/3', UpdateSourceTrigger=PropertyChanged}" FontSize="13" Foreground="#888888" Margin="0,8,0,0"/>
                </StackPanel>

                <Grid Height="6" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" CornerRadius="3" Margin="0,0,4,0"
                            Background="{Binding CurrentStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=1}"/>
                    <Border Grid.Column="1" CornerRadius="3" Margin="4,0,4,0"
                            Background="{Binding CurrentStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=2}"/>
                    <Border Grid.Column="2" CornerRadius="3" Margin="4,0,0,0"
                            Background="{Binding CurrentStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=3}"/>
                </Grid>

                <!-- STEP 1: Email & Département -->
                <StackPanel x:Name="Step1Panel" Visibility="{Binding CurrentStep, Converter={StaticResource StepToVisibilityConverter}, ConverterParameter=1}">
                    <TextBlock Text="Adresse Email" FontSize="12" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>
                    <TextBox x:Name="EmailBox" Height="48" Padding="16,0"
                             Background="White" BorderBrush="#DDDDDD" BorderThickness="1"
                             FontSize="13" VerticalContentAlignment="Center"
                             Foreground="#1A1A1A" CaretBrush="#0066CC" Margin="0,0,0,8"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock Text="✓ Email valide" FontSize="10" Foreground="#0066CC" Height="16" Margin="0,0,0,20"
                               Visibility="{Binding IsEmailValid, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <TextBlock Text="Département" FontSize="12" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>
                    <ComboBox x:Name="DepartmentBox" Height="48" Padding="16,0"
                              Background="White" BorderBrush="#DDDDDD" BorderThickness="1"
                              FontSize="13" VerticalContentAlignment="Center" Foreground="#1A1A1A"
                              ItemsSource="{Binding Departments}"
                              SelectedItem="{Binding SelectedDepartment, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </StackPanel>

                <!-- STEP 2: Rôle (filtré par département) -->
                <StackPanel x:Name="Step2Panel" Visibility="{Binding CurrentStep, Converter={StaticResource StepToVisibilityConverter}, ConverterParameter=2}">
                    <TextBlock Text="Rôle" FontSize="12" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>
                    <ComboBox x:Name="RoleBox" Height="48" Padding="16,0"
                              Background="White" BorderBrush="#DDDDDD" BorderThickness="1"
                              FontSize="13" VerticalContentAlignment="Center" Foreground="#1A1A1A"
                              ItemsSource="{Binding AvailableRoles, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding SelectedRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </StackPanel>

                <!-- STEP 3: Mot de passe -->
                <StackPanel x:Name="Step3Panel" Visibility="{Binding CurrentStep, Converter={StaticResource StepToVisibilityConverter}, ConverterParameter=3}">
                    <TextBlock Text="Mot de passe" FontSize="12" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>
                    <PasswordBox x:Name="PasswordBox" Height="48" Padding="16,14"
                                 Background="White" BorderBrush="#DDDDDD" BorderThickness="1"
                                 FontSize="13" VerticalContentAlignment="Center" Foreground="#1A1A1A" Margin="0,0,0,16">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>
                    <TextBlock Text="Au moins 8 caractères" FontSize="10" Foreground="#888888" Margin="0,0,0,16"/>

                    <TextBlock Text="Confirmer le mot de passe" FontSize="12" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" Height="48" Padding="16,14"
                                 Background="White" BorderBrush="#DDDDDD" BorderThickness="1"
                                 FontSize="13" VerticalContentAlignment="Center" Foreground="#1A1A1A" Margin="0,0,0,12">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                    <TextBlock x:Name="PasswordMatchText" Text="✓ Les mots de passe correspondent" FontSize="11" Foreground="#0066CC" Margin="0,0,0,20" 
                               Visibility="{Binding IsPasswordMatching, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock x:Name="PasswordMismatchText" Text="✗ Les mots de passe ne correspondent pas" FontSize="11" Foreground="#E74C3C" Margin="0,0,0,20" 
                               Visibility="{Binding IsPasswordMatching, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    
                    <!-- Help text for minimum length -->
                    <TextBlock FontSize="10" Foreground="#E74C3C" Margin="0,0,0,15" TextWrapping="Wrap"
                               Visibility="{Binding IsPasswordValid, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                               Text="Le mot de passe doit faire au moins 8 caractères"/>
                </StackPanel>

                <!-- Bouton Continuer -->
                <Button x:Name="ContinueButton" Content="{Binding ContinueButtonText}" 
                        Height="48" FontSize="14" FontWeight="SemiBold"
                        BorderThickness="0" Cursor="Hand" Margin="0,15,0,20"
                        Command="{Binding ContinueCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0066CC"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                    <Setter Property="Foreground" Value="#999999"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0052A3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Retour -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Center">
                    <TextBlock Text="Déjà enregistré? " FontSize="12" Foreground="#666666" VerticalAlignment="Center"/>
                    <Button x:Name="LoginButton" Content="Se connecter" FontSize="12" Foreground="#0066CC" 
                           Cursor="Hand" FontWeight="SemiBold" Background="Transparent" BorderThickness="0"
                           Click="LoginButton_Click" Padding="0,0,0,0" Height="Auto" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Messages -->
                <TextBlock x:Name="StatusText" Text="{Binding StatusMessage}" FontSize="12" Foreground="#E74C3C" TextAlignment="Center" TextWrapping="Wrap" MinHeight="20"/>

                <!-- Footer -->
                <TextBlock Text="© 2025 Digital ERP. Tous droits réservés." FontSize="10" Foreground="#CCCCCC" TextAlignment="Center" Margin="0,40,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
